<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vmagames.relevant_news">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/relevantnewslogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/relevantnewslogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.vmagames.relevant_news.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vmagames.relevant_news.Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.vmagames.relevant_news.ChooseBoxList"
            android:label="ChooseBoxList"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.vmagames.relevant_news.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>